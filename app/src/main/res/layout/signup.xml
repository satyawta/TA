<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content" android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="640dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="404dp"
        android:id="@+id/launch_frame"
        android:background="@drawable/background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/launch_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23.7dp"
                android:layout_marginRight="62.7dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/launch_text"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="36.6sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/launch_text"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/launch_text"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/arista_alternate"
                android:text="TravelMate"
                android:textColor="#ffffff"
                android:textSize="22sp" />

        </RelativeLayout>
    </FrameLayout>
    <TextView
        android:layout_width="298.7dp"
        android:layout_height="46.7dp"
        android:gravity="center"
        android:id="@+id/facebook_login"
        android:textSize="15.8sp"
        android:paddingLeft="24dp"
        android:drawableLeft="@drawable/icon"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#ffffff"
        android:letterSpacing="0.03"
        android:text="Facebook"
        android:layout_marginTop="22.3dp"
        android:layout_below="@+id/launch_frame"
        android:layout_centerInParent="true"
        android:background="#3b5998"
        />
    <TextView
        android:layout_width="298.7dp"
        android:layout_height="46.7dp"
        android:gravity="center"
        android:id="@+id/google_login"
        android:textSize="15.8sp"
        android:paddingLeft="24dp"
        android:drawableLeft="@drawable/google"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#ffffff"
        android:letterSpacing="0.03"
        android:text="Google"
        android:layout_marginTop="22.3dp"
        android:layout_below="@+id/facebook_login"
        android:layout_centerInParent="true"
        android:background="#ff3e3e"/>

    <TextView
        android:id="@+id/signup"
        android:layout_width="142.7dp"
        android:layout_height="46.7dp"
        android:layout_marginLeft="45.3dp"
        android:layout_below="@+id/google_login"
        android:layout_marginTop="12dp"
        android:background="@drawable/rectangle"
        android:letterSpacing="0.01"
        android:gravity="center"
        android:text="Sign Up"
        android:textColor="#000000"
        android:textSize="15.8sp" />


    <TextView
        android:id="@+id/login"
        android:layout_width="142.7dp"
        android:layout_height="46.7dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="13.7dp"
        android:layout_toRightOf="@+id/signup"
        android:layout_below="@+id/google_login"
        android:layout_marginRight="36.3dp"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:letterSpacing="0.01"
        android:text="Login"
        android:textColor="#000000"
        android:textSize="15.8sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8.7sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17.7dp"
        android:layout_below="@+id/signup"
        android:letterSpacing="0.01"
        android:text="@string/terms"
        android:id="@+id/textView" />

</RelativeLayout>
</ScrollView>